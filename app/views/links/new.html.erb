<div class="row">
  <div class="col-md-3"></div>
   <div class="col-md-6">
     <h1></h1>


  <%= form_tag "/links", method: :post do %>
    
    <div class="form-group">
      <%= label_tag :name %>
      <%= text_field_tag :name, "", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag :link %>
      <%= text_field_tag :link, "", placeholder: "Here's the link", class: "form-control" %>
    </div>
    
    <div>
      <%= submit_tag "Create Shortened Link" %>
    </div>

    <% end %>